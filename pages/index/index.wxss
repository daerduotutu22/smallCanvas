page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.canvas{
  background: lightcyan;
}
.canvas-tool{
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  background: #aaa;
  display: flex;
  flex-direction: row;
  align-items: center;

}
.canvas-tool .thickness{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 30%;
  height: 100%;
}
.thickness .cir{
  background: #eee;
  border-radius: 50%;
  margin-right: 10px;
}
.thickness .thickness-one{
  width: 15px;
  height: 15px;
}
.thickness .thickness-two{
  width: 20px;
  height: 20px;
}
.thickness .thickness-three{
  width: 25px;
  height: 25px;
}
.color{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

}
.col{
  width: 20px;
  height: 20px;
  margin-right: 15px;

}
.col.red{
  background: red;

}
.col.blue{
  background: blue;
}
.col.yellow{
  background: yellow;
}
text{
  font-size: 14px;
  margin-left: 10px;
  color: #eee;
}